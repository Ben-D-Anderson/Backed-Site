<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>Backed</display-name>

    <listener>
        <listener-class>backed.site.util.QueueManager</listener-class>
    </listener>

    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>backed.site.servlets.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern/>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>backed.site.servlets.account.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>backed.site.filters.account.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>backed.site.servlets.account.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>RegisterFilter</filter-name>
        <filter-class>backed.site.filters.account.RegisterFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RegisterFilter</filter-name>
        <url-pattern>/register</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>backed.site.servlets.account.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>LogoutFilter</filter-name>
        <filter-class>backed.site.filters.account.LogoutFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogoutFilter</filter-name>
        <url-pattern>/logout</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>ConfirmEmailServlet</servlet-name>
        <servlet-class>backed.site.servlets.email.ConfirmEmailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConfirmEmailServlet</servlet-name>
        <url-pattern>/confirm_email</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>ConfirmEmailFilter</filter-name>
        <filter-class>backed.site.filters.email.ConfirmEmailFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ConfirmEmailFilter</filter-name>
        <url-pattern>/confirm_email</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>ErrorServlet</servlet-name>
        <servlet-class>backed.site.servlets.ErrorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ErrorServlet</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>

    <error-page>
        <location>/error</location>
    </error-page>

    <servlet>
        <servlet-name>LoginAPIServlet</servlet-name>
        <servlet-class>backed.site.api.LoginAPIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginAPIServlet</servlet-name>
        <url-pattern>/api/login</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>LoginAPIFilter</filter-name>
        <filter-class>backed.site.api.LoginAPIFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginAPIFilter</filter-name>
        <url-pattern>/api/login</url-pattern>
    </filter-mapping>

    <servlet>
    <servlet-name>LogoutAPIServlet</servlet-name>
    <servlet-class>backed.site.api.LogoutAPIServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>LogoutAPIServlet</servlet-name>
        <url-pattern>/api/logout</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>LogoutAPIFilter</filter-name>
        <filter-class>backed.site.api.LogoutAPIFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LogoutAPIFilter</filter-name>
        <url-pattern>/api/logout</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>UploadAPIServlet</servlet-name>
        <servlet-class>backed.site.api.UploadAPIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UploadAPIServlet</servlet-name>
        <url-pattern>/api/upload</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>UploadAPIFilter</filter-name>
        <filter-class>backed.site.api.UploadAPIFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UploadAPIFilter</filter-name>
        <url-pattern>/api/upload</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>DownloadAPIServlet</servlet-name>
        <servlet-class>backed.site.api.DownloadAPIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DownloadAPIServlet</servlet-name>
        <url-pattern>/api/download</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>DownloadAPIFilter</filter-name>
        <filter-class>backed.site.api.DownloadAPIFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DownloadAPIFilter</filter-name>
        <url-pattern>/api/download</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>FilesAPIServlet</servlet-name>
        <servlet-class>backed.site.api.FilesAPIServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FilesAPIServlet</servlet-name>
        <url-pattern>/api/files</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>FilesAPIFilter</filter-name>
        <filter-class>backed.site.api.FilesAPIFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>FilesAPIFilter</filter-name>
        <url-pattern>/api/files</url-pattern>
    </filter-mapping>

</web-app>